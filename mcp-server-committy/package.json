{
  "name": "mcp-server-committy",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-server-committy": "dist/index.js"
  },
  "description": "MCP server wrapper for the Committy Rust CLI",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rm -rf dist",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "node scripts/test.mjs"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martient/committy.git"
  },
  "bugs": {
    "url": "https://github.com/martient/committy/issues"
  },
  "homepage": "https://github.com/martient/committy#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "ajv": "^8.17.1",
    "yaml": "^2.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
